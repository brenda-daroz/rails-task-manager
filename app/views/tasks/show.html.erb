<h1><%= @task.title  %></h1>
<p><%= @task.details  %></p>

<%= form_with model: @task do |f| %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Edit a task", task_edit_path %></p>
<p><%= link_to "Go back to all tasks", tasks_path %></p>


<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
